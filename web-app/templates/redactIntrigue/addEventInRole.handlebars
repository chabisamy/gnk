<div class="accordion-group">
    {{#if role.title}}
    <div class="accordion-heading alert-success">
    {{else}}
    <div class="accordion-heading">
    {{/if}}
        <a class="accordion-toggle spanLabel" data-toggle="collapse" data-parent="#accordionEvent{{ role.roleId }}"
           href="#collapseEvent{{ role.roleId }}-{{ event.id }}" data-eventId="{{ event.id }}">
            {{ event.timing }}% - {{ encodeAsHtml event.name }}
        </a>
    </div>
    <div id="collapseEvent{{ role.roleId }}-{{ event.id }}" class="accordion-body collapse">
        <div class="accordion-inner">
            <div class="formRow">
                <div class="row formRow text-center">
                    <label>
                        Titre*
                    </label>
                </div>
            </div>
            <div contenteditable="false" class="text-left richTextEditor textTitle">
                {{ role.title }}
            </div>
            <div class="formRow text-center">
                <div class="span4"></div>
                <div class="span2">
                    <label>
                        Est annonc√©
                    </label>
                </div>
                <div class="span1">
                    {{#if role.isAnnounced}}
                        <input disabled="disabled" type="checkbox" name="roleHasEventannounced{{ event.id }}" id="roleHasEventannounced{{ event.id }}" checked="checked">
                    {{else}}
                        <input disabled="disabled" type="checkbox" name="roleHasEventannounced{{ event.id }}" id="roleHasEventannounced{{ event.id }}">
                    {{/if}}
                </div>
            </div>
            <div class="row formRow text-center">
                <label>
                    Description*
                </label>
            </div>
            <div contenteditable="false" class="text-left richTextEditor">
                {{ role.description }}
            </div>
        </div>
    </div>
</div>