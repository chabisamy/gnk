<div class="accordion-group">
    {{#if role.title}}
    <div class="accordion-heading alert-success">
    {{else}}
    <div class="accordion-heading">
    {{/if}}
        <a class="accordion-toggle spanLabel" data-toggle="collapse" data-parent="#accordionPastScene{{ role.roleId }}"
           href="#collapsePastScene{{ role.roleId }}-{{ pastscene.id }}" data-pastsceneId="{{ pastscene.id }}">

            {{#pastSceneTime pastscene}}{{/pastSceneTime}}

            {{ encodeAsHtml pastscene.title }}
        </a>
    </div>
    <div id="collapsePastScene{{ role.roleId }}-{{ pastscene.id }}" class="accordion-body collapse">
        <div class="accordion-inner">
            <div class="formRow">
                <div class="row formRow text-center">
                    <label>
                        Titre *
                    </label>
                </div>
            </div>
            <div contenteditable="false" class="text-left richTextEditor textTitle">
                {{ role.title }}
            </div>
            <div class="row formRow text-center">
                <label>
                    Description *
                </label>
            </div>
            <div contenteditable="false" class="text-left richTextEditor">
                {{ role.description }}
            </div>
        </div>
    </div>
</div>